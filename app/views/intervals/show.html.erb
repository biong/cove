<div class="grid_8 video">
		  <!-- Begin VideoJS -->
		  <div class="vim-css video-js-box">
		    <!-- Using the Video for Everybody Embed Code http://camendesign.com/code/video_for_everybody -->
            <video id="cove-video-player" class="video-js" width="480" height="270" controls>
              <source src="/videos/<%= @interval.filename %>" type='video/mp4; codecs="avc1.42E01E, mp4a.40.2"' />
            </video>
          </div>

          <!-- End VideoJS -->
	    </div>
		<div class="grid_5 video_snippit">
	
			<div class="interval_time_background">
				<div class="interval_time">
					3:14-4:34
				</div>
			</div>

			
			<%= form_for([@interval, @interval.snippets.build]) do |f| %>
			    <%= f.hidden_field(:offset) %>
			    <%= f.hidden_field(:duration) %>
			    <%= f.submit "Create Snippet", :class => "create_interval_button" %>
			<% end %>
		</div>
		
<div class="interval_show">

	<div class="clear"></div>


	<div class="grid_5" id="sessTypePhrase">
		<div>
			<h1><%= @interval.session_type %></h1> <!--Session Type-->
			<strong>Phrase: <%= @interval.phrase_name %></strong> <br/>
			<strong>Type: <%= @interval.phrase_type %></strong>
		</div>
	</div>
	
	<%= simple_form_for @interval do |f| %>
	<div class="grid_6" id="camera_angle_map">
		<div class="cam_angle">
			<%= image_for_camera_angle @interval.camera_angle %>
		</div>
	</div>
	
	<div class="grid_5 more_info">
		<div class="info">
			<h3>Session <%= @interval.session_number %></h3>
			<h3><%= @interval.start_time.strftime("%F") %></h3> <!-- Date-->
			<h4>Length: <%= @interval.duration_string %></h4>
		</div>
	</div>
<br style="clear:both"/>
	<% end %>
	<div class="clear"></div>



	<div class="clear"></div>
	<div class="grid_8 mark_button">
		<!--<button class="markstart">Mark start</button>
        <button class="markend">Mark end</button>-->
        <form action="/snippets" method="get">
    		<button class="markstart">Start Mark</button>
        	<input type="text" id="start_mark" value=""></input>
        	<button class="markend">End Mark</button>
        	<input type="text" id="end_mark"></input>
        </form>
     </div>
    <div class="clear"></div>
    <div class="grid_8 interval_form">
    	<fieldset>
    	<legend>Create Snippet</legend>
    	<p>Title:</p><input type="text" id="interval_title"></input><br/>
        <p>Description:</p><textarea cols=37 rows=3 id="interval_description"></textarea>
		</fieldset>     
     </div>

	<div class="clear"></div>
	<div class="grid_4">&nbsp</div>
	<div class="grid_4 save_button">
		<button class="cancel">Cancel</button>
        <button class="save">Save</button>
	</div>
	<div class="grid_4">&nbsp</div>

